generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BentoItem {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  link        String?
  icon        String
  bgcolor     String?
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
} 